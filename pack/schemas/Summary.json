{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["incident_id", "summary_md"],
  "properties": {
    "incident_id": {
      "type": "string",
      "minLength": 1
    },
    "summary_md": {
      "type": "string"
    },
    "highlights": {
      "type": "array",
      "items": {"type": "string"}
    },
    "action_items": {
      "type": "array",
      "items": {"type": "string"}
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "model": {
      "type": "string"
    },
    "artifact_ptr": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
