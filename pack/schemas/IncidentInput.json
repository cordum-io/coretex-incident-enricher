{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["incident_id", "source", "destination"],
  "properties": {
    "incident_id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "source": {
      "type": "object",
      "required": ["system"],
      "properties": {
        "system": {
          "type": "string",
          "enum": ["mock", "pagerduty"]
        },
        "url": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "raw": {
      "type": "object",
      "additionalProperties": true
    },
    "destination": {
      "type": "object",
      "required": ["mode"],
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["artifact", "slack"]
        },
        "slack_webhook_url": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
