{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["incident_id", "evidence"],
  "properties": {
    "incident_id": {
      "type": "string",
      "minLength": 1
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["kind", "artifact_ptr"],
        "properties": {
          "kind": {"type": "string"},
          "title": {"type": "string"},
          "artifact_ptr": {"type": "string"},
          "content_type": {"type": "string"},
          "bytes": {"type": "integer", "minimum": 0}
        },
        "additionalProperties": false
      }
    },
    "normalized_context": {
      "type": "object",
      "additionalProperties": true
    },
    "collected_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
